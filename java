<! DOCTYPE html >
    < html >
           < đầu >
                   < style >
		# demo { color : yellow; nền : xanh lam; chiều cao : 250 px ; chiều rộng :  300 px ; kích thước phông chữ :  25 px ;}
		nút { background : red;}
	</ style >
           </ head >
           < body >
            < h1 > JavaScript đoạn mã được đặt trong head </ h1 >
            < p  id = " demo " > </ p >
            < button  type = " button " onclick = " hienthi () " > Hiển thị </ button >            
           < button  type = " button " onclick = " tongn () " > Tổng 1- > n </ button >  
           < button  type = " button " onclick = " tongchan () " > Tổng chẵn 1- > n </ button >  
          < script >
              function  hienthi ( )  {
                tài liệu . getElementById ( "bản trình diễn" ) . innerHTML  =  "Xin chào." ;
              }
             function  tongn ( )  {
	// Hiển thị tổng 1 -> 10
                tài liệu . getElementById ( "bản trình diễn" ) . innerHTML  =  "Tổng 1-> n." ;
              }
            function  tongchan ( )  {
	// Hiển thị chẵn sàng tổng thể 1-> 10
                tài liệu . getElementById ( "bản trình diễn" ) . innerHTML  =  "Tổng chẵn 1-> n." ;
              }
            </ script >       
     </ body >
